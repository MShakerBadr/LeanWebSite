@model UserLoginDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <link href="~/Content/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/Login.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Login", "Authorize"))
    {
        <div class="container d-flex justify-content-center">
            <div class="login-box">
                <div class="form-group text-center">
                    <label class="text-danger font-weight-bold">@ViewBag.LoginErrors</label>
                </div>
                <div class="form-group">
                    <input type="text" name="Username" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group">
                    <input type="password" name="Password" class="form-control" placeholder="Password" />
                </div>
                <div class="form-group">
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        <span>Remember Me</span>
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success form-control" value="Login" />
                </div>
            </div>
        </div>
    }
</body>
</html>
